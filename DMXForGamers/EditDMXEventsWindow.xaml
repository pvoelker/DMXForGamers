<Window x:Class="DMXForGamers.EditDMXEventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMXForGamers"
        xmlns:views="clr-namespace:DMXForGamers.Views"
        mc:Ignorable="d"
        Title="Edit Events" Height="600" Width="800" DataContextChanged="Window_DataContextChanged">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" Margin="10"  Orientation="Horizontal" HorizontalAlignment="Right">
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/DMXForGamers;component/Images/Save16.png" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Margin="5,0,0,0">Save</TextBlock>
                </StackPanel>
            </Button>
            <Button Margin="10,0,0,0">Cancel</Button>
        </StackPanel>        
        <views:EditDMXEvents Margin="10"></views:EditDMXEvents>
    </DockPanel>
</Window>
