@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<DMXForGamers.Models.Main>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>DMX For Gamers Remote Control</title>
</head>
<body>
    <table>
        <tr>
            <td>Remote Port:</td>
            <td>@Model.RemotePort</td>
        </tr>
    </table>

    <hr />

    @foreach (var item in Model.ContinuousEvents)
    {
        <div>
            <form id="@item.EventID">
                <button type="button" onclick="eventclickon('@item.EventID')">Enabled @item.EventID</button>
                <button type="button" onclick="eventclickoff('@item.EventID')">Disable @item.EventID</button>
            </form>
            <br />
        </div>
    }

    <hr />

    @foreach (var item in Model.NonContinuousEvents)
    {
        <div>
            <form id="@item.EventID">
                <button type="button" onclick="eventclickon('@item.EventID')">@item.EventID</button>
            </form>
            <br />
        </div>
    }

    <script src="@Url.Content("/Contents/jquery-3.3.1.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        function eventclickon(eventid) {
            $.getJSON("events/" + eventid + "/enable",
                function (Data) {

                })
                .fail(
                function (jqXHR, textStatus, err) {
                    alert('Error: ' + err)
                });
        }
        function eventclickoff(eventid) {
            $.getJSON("events/" + eventid + "/disable",
                function (Data) {

                })
                .fail(
                function (jqXHR, textStatus, err) {
                    alert('Error: ' + err)
                });
        }    </script>
</body>
</html>-